<%= form_with(model: seminar, local: true) do |f| %>

  <div class="field">
    <%= f.label :name,"セミナー名" %>
    <%= f.text_field :name %>
    <%= f.label :date,"日付" %>
    <%= f.date_field :date %>
    <%= f.label :start_time,"開始時刻" %>
    <%= f.time_field :start_time %>
    ～
    <%= f.label :end_time,"終了時刻" %>
    <%= f.time_field :end_time %>
    <%= f.label :room_id,"教室" %>
    <%= f.collection_select(:room_id,Room.all,:id,:name,:include_blank => "選択してください") %>
    <%= f.label :price,"セミナー料金（1人あたり）" %>
    <%= f.text_field :price %>円
    <%= f.label :cost,"費用（合計）" %>
    <%= f.text_field :cost %>円
    <%= f.label :other,"備考" %>
    <%= f.text_area :other %>
  </div>

  <div class="actions">
    <%= f.submit "登録" %>
  </div>
  
  <% if seminar.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(seminar.errors.count, "項目") %>をご確認ください　</h2>

    <ul>
    <% seminar.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
<% end %>
